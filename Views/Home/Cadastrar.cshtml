@model AULA08MVCTEMPLATEMINIMO.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, inicial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <title>Título da página</title>
</head>
<body>
   <div class="container">
       <h1 class="text-primary">CADASTRO</h1>
       <hr>
       <form method="post" class="w-25">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label asp-for="Nome">Nome: </label><br>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email: </label><br>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="mt-3 mx-3">
            <a href="/Home/Index" class="btn btn-primary">Voltar </a>
            <button type="submit" class="btn btn-success">Salvar </button>
        </div>
       </form>
   </div>
</body>
</html>
